<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobCompletedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/complete_heading"
            android:text="You have Completed the quiz"
            android:textSize="25dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/price_heading"
            android:text="Your score"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/final_score"
            android:text="0"
            android:textSize="20dp"
            android:layout_below="@+id/price_heading"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The score will be added to your total points"
            android:id="@+id/name_mechanic"
            android:textSize="20dp"
            android:layout_above="@+id/favorite"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_points"
            android:text="View Points"
            android:paddingHorizontal="30dp"
            android:textAlignment="center"
            android:layout_marginTop="80dp"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/loginbutton"
            android:textColor="@color/colorWhite"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/game_done"
            android:text="Done"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/registerbutton"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

</RelativeLayout>