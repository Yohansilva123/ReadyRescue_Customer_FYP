<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobCompletedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/complete_heading"
            android:text="Your Service has been Completed"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/price_heading"
            android:text="Total Price"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginTop="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:text="Rs. 0.00"
            android:textSize="18dp"
            android:layout_below="@+id/price_heading"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Details"
            android:textSize="18dp"
            android:layout_above="@+id/name_mechanic"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name of Mechanic"
            android:id="@+id/name_mechanic"
            android:textSize="18dp"
            android:layout_above="@+id/favorite"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate the Mechanic"
            android:textSize="15dp"
            android:layout_above="@+id/name_mechanic"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/severityGroup"
            android:layout_gravity="center">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/high"
                android:text="Good"
                android:textSize="14dp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/medium"
                android:text="Neutral"
                android:textSize="14dp"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/low"
                android:text="Bad"
                android:textSize="14dp"/>

        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favorite"
            android:text="Add as Favorite"
            android:paddingHorizontal="30dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/loginbutton"
            android:textColor="@color/colorWhite"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_request"
            android:text="Done"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/registerbutton"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

</RelativeLayout>